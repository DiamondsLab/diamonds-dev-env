{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "tsc: watch - tsconfig.json"
    },
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "tsc: build - tsconfig.json"
    },
    {
      "type": "shell",
      "command": "yarn",
      "args": ["workspace:build"],
      "group": "build",
      "label": "yarn: workspace build",
      "detail": "Build all workspaces including hardhat-diamonds"
    },
    {
      "type": "shell",
      "command": "npx",
      "args": ["hardhat", "compile"],
      "group": "build",
      "label": "hardhat: compile",
      "detail": "Compile Hardhat contracts"
    }
  ]
}
