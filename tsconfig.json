{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": ["./scripts", "./test", "./test-suites", "./typechain-types"],
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "typeRoots": ["node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "hardhat-diamonds": ["./packages/hardhat-diamonds/src/index"]
    }
  },
  "include": [
    "./scripts",
    "./diamonds/ExampleDiamond/callbacks",
    "./test",
    "./test-suites",
    "./typechain-types"
  ],
  "files": ["./hardhat.config.ts"],
  "exclude": [
    "./notes/**/*",
    "node_modules",
    "dist",
    "artifacts",
    "coverage",
    "cache",
    "types",
    "packages/*/node_modules",
    "packages/*/dist",
    "**/docs/**",
    "packages/*/docs/**",
    "diamond-typechain-types/**/*"
  ],
  "references": [
    {
      "path": "./packages/hardhat-diamonds"
    }
  ]
}
