{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "rootDirs": [
      "./scripts",
      "./test",
      "./test-suites",
      "./typechain-types",
      "./diamond-typechain-types"
    ],
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "typeRoots": ["node_modules/@types", "./types"],
    "moduleResolution": "node"
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    "./diamond-typechain-types",
    "test-suites/",
    "./tasks"
  ],
  "files": ["./hardhat.config.ts"],
  "exclude": [
    "./notes/**/*",
    "./node_modules",
    "./dist",
    "./artifacts",
    "./coverage",
    "./cache",
    "./types",
    "**/examples/**",
    "./packages/*/examples/**"
  ]
}
