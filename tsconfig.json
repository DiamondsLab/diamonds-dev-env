{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": [
      "./scripts",
      "./test",
      "./test-suites",
      "./typechain-types",
      "./packages/*/src"
    ],
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "typeRoots": ["node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "diamonds-monitor": ["./packages/diamonds-monitor/src/index"]
    }
  },
  "include": [
    "./scripts",
    "./test",
    "./test-suites",
    "./typechain-types",
    "./packages/*/src/**/*"
  ],
  "files": ["./hardhat.config.ts"],
  "exclude": [
    "./notes/**/*",
    "./node_modules",
    "./dist",
    "./artifacts",
    "./coverage",
    "./cache",
    "./types",
    "./packages/*/node_modules",
    "./packages/*/dist"
  ],
  "references": [
    {
      "path": "./packages/diamonds-monitor"
    }
  ]
}
